
<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new campground</h1>
        <div style="width: 30%; margin: 40px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                <input  class="form-control" name="name" placeholder="name" type="text">
                </div>
                 <div class="form-group">
                <input class="form-control" name="image" placeholder="image" type="text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="description">
                </div>
                 <div class="form-group">
                <button class="btn btn-default btn-primary btn-lg btn-block">Submit</button>
                </div>
                
            </form>
            
            <a href="/campgrounds" style="text-align: center">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
